{
  "uid": "logs-overview",
  "title": "Logs Overview",
  "tags": ["observability", "logs", "loki", "overview"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Total Log Volume",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=\"backend\"}[1m]))",
          "legendFormat": "API Logs",
          "refId": "A"
        },
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=\"celery\"}[1m]))",
          "legendFormat": "Celery Logs",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {}
        }
      }
    },
    {
      "id": 2,
      "title": "Log Levels Distribution",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=~\"backend|celery\"}[5m])) by (level)",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Count (Last 5m)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 8},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=~\"backend|celery\", level=\"error\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Warning Count (Last 5m)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 8},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=~\"backend|celery\", level=\"warning\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 5, "color": "yellow"},
              {"value": 20, "color": "orange"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Info Count (Last 5m)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=~\"backend|celery\", level=\"info\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Error Rate",
      "type": "stat",
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 8},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(rate({job=~\"backend|celery\", level=\"error\"}[5m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Errors by Service",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=~\"backend|celery\", level=\"error\"}[5m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 8,
      "title": "Logs by Service",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "sum(count_over_time({job=~\"backend|celery\"}[5m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 9,
      "title": "Recent Errors (All Services)",
      "type": "logs",
      "gridPos": {"h": 14, "w": 24, "x": 0, "y": 22},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "{job=~\"backend|celery\", level=\"error\"}",
          "refId": "A"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": true,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    },
    {
      "id": 10,
      "title": "Log Search",
      "type": "logs",
      "gridPos": {"h": 14, "w": 24, "x": 0, "y": 36},
      "targets": [
        {
          "datasource": {"type": "loki", "uid": "Loki"},
          "expr": "{job=~\"backend|celery\"}",
          "refId": "A"
        }
      ],
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": true,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false
      }
    }
  ]
}

