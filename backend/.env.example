# ============================================================================
# Backend Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8080
UVICORN_WORKERS=4

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://postgres:your_password@postgres:5432/hcp

# ============================================================================
# Qdrant Configuration
# ============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# ============================================================================
# MinIO Configuration
# ============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_PUBLIC_ENDPOINT=your-domain.com:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_SECURE=false
MINIO_BUCKET_NAME=documents

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/1

# ============================================================================
# Security Configuration
# ============================================================================
# IMPORTANT: Generate strong random keys for production!
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
REFRESH_SECRET_KEY=your-refresh-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_URL=https://your-domain.com
FRONTEND_HOST=your-domain.com

# ============================================================================
# AI/ML Configuration
# ============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=mistralai/mistral-7b-instruct:free
OPENROUTER_FALLBACK_MODELS=meta-llama/llama-3.3-70b-instruct:free
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
LLM_TEMPERATURE=0.3

# ============================================================================
# Observability Configuration
# ============================================================================
OBSERVABILITY_ENABLED=true
GRAFANA_URL=http://grafana:3000
PROMETHEUS_URL=http://prometheus:9090
LOKI_URL=http://loki:3100

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_TTL_EMBEDDINGS=86400
CACHE_TTL_RESPONSES=3600
CACHE_TTL_DOCUMENTS=7200
CACHE_TTL_CHAT_HISTORY=1800

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# ============================================================================
# File Upload Configuration
# ============================================================================
UPLOAD_FOLDER=uploads/
MAX_FILE_SIZE_MB=200

# ============================================================================
# Document Processing Configuration
# ============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================================================
# Celery Configuration
# ============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_METRICS_PORT=8081

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_DIR=/var/log/app
